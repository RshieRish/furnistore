# MongoDB Connection
# MongoDB Atlas connection string:
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
# For local development with MongoDB installed locally:
# MONGODB_URI=mongodb://localhost:27017/furniture-store
MONGO_USER=your_mongo_user
MONGO_PASSWORD=your_mongo_password
MONGO_CLUSTER=your_mongo_cluster.mongodb.net

# JWT Secret (32 characters random string)
JWT_SECRET=your_jwt_secret_at_least_32_chars_long

# Groq API Key
GROQ_API_KEY=your_groq_api_key

# AWS S3 (for image uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_BUCKET_NAME=your_bucket_name
AWS_REGION=your_aws_region

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Server Configuration
PORT=4000
FRONTEND_URL=http://localhost:3000 